# .env.example - copy nội dung và paste vào Render "Add from .env"
# Thay các giá trị YOUR_... bằng giá trị thực trước khi paste

# Database (SQL Server / Azure)
SPRING_DATASOURCE_URL=jdbc:sqlserver://YOUR_SQL_SERVER:1433;databaseName=YOUR_DB;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;
SPRING_DATASOURCE_USERNAME=YOUR_DB_USERNAME
SPRING_DATASOURCE_PASSWORD=YOUR_DB_PASSWORD

# Server
SERVER_SERVLET_CONTEXT_PATH=/alotra-website

# JWT / App
SECURITY_JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY
SECURITY_JWT_EXPIRATION_TIME=86400000

# Google OAuth2
GOOGLE_OAUTH_CLIENT_ID=YOUR_GOOGLE_OAUTH_CLIENT_ID
GOOGLE_OAUTH_CLIENT_SECRET=YOUR_GOOGLE_OAUTH_CLIENT_SECRET
GOOGLE_OAUTH_REDIRECT_URI=https://your-render-service.onrender.com/alotra-website/login/oauth2/code/google

# Cloudinary (media)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_CLOUDINARY_API_KEY
CLOUDINARY_API_SECRET=YOUR_CLOUDINARY_API_SECRET

# Mail (SMTP / Gmail app password)
SPRING_MAIL_USERNAME=YOUR_MAIL_USERNAME
SPRING_MAIL_PASSWORD=YOUR_MAIL_PASSWORD

# Payment providers (optional)
VNPAY_TMN_CODE=YOUR_VNPAY_TMN_CODE
VNPAY_HASH_SECRET=YOUR_VNPAY_HASH_SECRET
VNPAY_PAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://your-render-service.onrender.com/alotra-website/api/payment/vnpay/return

PAYOS_CLIENT_ID=YOUR_PAYOS_CLIENT_ID
PAYOS_API_KEY=YOUR_PAYOS_API_KEY
PAYOS_CHECKSUM_KEY=YOUR_PAYOS_CHECKSUM_KEY

# Runtime flags (optional)
SPRING_PROFILES_ACTIVE=production
COOKIE_SECURE=true
