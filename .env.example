# .env.example - copy thành .env.local hoặc dùng làm checklist, KHÔNG để secrets trong repo công khai
SPRING_DATASOURCE_URL=jdbc:sqlserver://yourserver.database.windows.net:1433;databaseName=YourDb;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;
SPRING_DATASOURCE_USERNAME=your_db_user
SPRING_DATASOURCE_PASSWORD=your_db_password

SERVER_SERVLET_CONTEXT_PATH=/alotra-website

SECURITY_JWT_SECRET_KEY=replace_with_secure_key
SECURITY_JWT_EXPIRATION_TIME=86400000

SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_ID=your_google_client_id
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_SECRET=your_google_client_secret
SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_REDIRECT_URI=https://your-render-service.onrender.com/alotra-website/login/oauth2/code/google

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

SPRING_MAIL_USERNAME=your_mail_user
SPRING_MAIL_PASSWORD=your_mail_password

# Optional / payment providers
VNPAY_MERCHANT_CODE=
VNPAY_HASH_SECRET=
PAYOS_CLIENT_ID=
PAYOS_CLIENT_SECRET=
